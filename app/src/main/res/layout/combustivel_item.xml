<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cardview_bg"
    tools:showIn="@layout/recycler_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/lblIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:text="G"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/lblNome"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Gasolina"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toEndOf="@id/lblIcon"
        android:layout_alignTop="@id/lblIcon" />

        <TextView
            android:id="@+id/lblPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/lblNome"
            android:text="PreÃ§o"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/lblRecomendacao"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Abastecer com Etanol"
        android:textSize="16sp"
        android:layout_below="@id/lblNome"
        android:layout_toEndOf="@id/lblIcon"/>

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="01/01/1999"
        android:textSize="16dp"
        android:textAlignment="textEnd"
        android:layout_toEndOf="@id/lblRecomendacao"
        android:layout_below="@id/lblNome"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>