<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cardview_bg"
    tools:showIn="@layout/recycler_activity"
    android:id="@+id/cvContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/lblIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:text="Id"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/lblPrecoGas"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Gas: R$ 5.50"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/lblIcon"
        android:layout_alignTop="@id/lblIcon" />

        <TextView
            android:id="@+id/lblPrecoEta"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/lblIcon"
            android:layout_below="@id/lblPrecoGas"
            android:text="Eta: R$ 3.80"
            android:textStyle="bold"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/lblRazao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Eta/Gas: 50%"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignTop="@id/lblPrecoGas"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1999/01/01 10:10:10"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:layout_below="@id/lblRazao"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>